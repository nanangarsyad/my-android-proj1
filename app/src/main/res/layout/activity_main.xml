<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.steapps.steapps.MainActivity"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher"/>

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2">

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="WELCOME"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tvWelcome"
            android:text="User Name"
            android:layout_margin="5dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvUserName">

            <Button
                style="@style/Widget.AppCompat.Button.Small"
                android:minHeight="0dp"
                android:id="@+id/btnIdentity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="IDENTITY"
                android:layout_margin="2dp"
                android:onClick="onClickBtnIdentity"/>

            <Button
                style="@style/Widget.AppCompat.Button.Small"
                android:minHeight="0dp"
                android:id="@+id/btnLogout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/btnIdentity"
                android:text="Logout"
                android:layout_margin="2dp"
                android:onClick="onClickBtnLogout"/>

        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.45"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnApdDriver"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:text="APD DRIVER"
            android:onClick="onClickBtnApdDriver"/>

        <Button
            android:id="@+id/btnKelengkapan"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:text="KELENGKAPAN KENDARAAN"
            android:onClick="onClickBtnKelengkapan"/>

        <Button
            android:id="@+id/btnPlacard"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:text="PLACARD"
            android:onClick="onClickBtnPlacard"/>

        <Button
            android:id="@+id/btnSuratDanBerlaku"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:text="SURAT MASA BERLAKU"
            android:onClick="onClickBtnSuratDanBerlaku"/>

        <Button
            android:id="@+id/btnCodeTruck"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:text="CODE TRUCK"
            android:onClick="onClickBtnCodeTruck"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear Form"
            android:layout_alignParentLeft="true"
            android:layout_margin="5dp"
            android:onClick="onClickBtnClear"/>

        <Button
            android:id="@+id/btnSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SEND FORm"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:onClick="onClickBtnSend"/>
    </RelativeLayout>
</LinearLayout >
