                    android:layout_gravity="start|center_vertical"/>
            </TableRow>

            <TableRow
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <TextView
                    android:text="Pita Pembatas"
                    android:layout_gravity="start|center_vertical"/>

                <com.kyleduo.switchbutton.SwitchButton
                    android:id="@+id/swPitaPembatas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    app:kswTextOff="Tidak"
                    app:kswTextOn="Ada"
                    android:layout_gravity="start|center_vertical"/>
            </TableRow>

            <TableRow
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <TextView
                    android:text="Gansal Roda"
                    android:layout_gravity="start|center_vertical"/>

                <com.kyleduo.switchbutton.SwitchButton
                    android:id="@+id/swGansalRoda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    app:kswTextOff="Tidak"
                    app:kswTextOn="Ada"
                    android:layout_gravity="start|center_vertical"/>
            </TableRow>

            <TableRow
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <TextView
                    android:text="Kotak Obat"
                    android:layout_gravity="start|center_vertical"/>

                <com.kyleduo.switchbutton.SwitchButton
                    android:id="@+id/swKotakObat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    app:kswTextOff="Tidak"
                    app:kswTextOn="Ada"
                    android:layout_gravity="start|center_vertical"/>
            </TableRow>


        </TableLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_marginRight="10dp"
            android:layout_alignParentLeft="true"
            android:onClick="onClickBtnCancel"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SAVE"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:onClick="onClickBtnSave"/>

    </RelativeLayout>

</RelativeLayout>
